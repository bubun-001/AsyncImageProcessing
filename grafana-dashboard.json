{
  "dashboard": {
    "title": "Image Processing Performance",
    "panels": [
      {
        "id": 1,
        "title": "Average Processing Time per Tile (ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "image_processing_last_avg_ms",
            "legendFormat": "{{processor}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Total Tiles Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "image_processing_tiles_total",
            "legendFormat": "{{processor}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Processing Runs",
        "type": "stat",
        "targets": [
          {
            "expr": "image_processing_runs_total",
            "legendFormat": "{{processor}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Tile Duration (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(image_processing_tile_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{processor}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Tile Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(image_processing_tiles_total[1m])",
            "legendFormat": "{{processor}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Total Processing Time (ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "image_processing_last_total_time_ms",
            "legendFormat": "{{processor}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Max Tile Duration",
        "type": "stat",
        "targets": [
          {
            "expr": "image_processing_tile_duration_seconds_max * 1000",
            "legendFormat": "{{processor}} (ms)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    }
  }
}

